<div class="container">
    {{#each articles}}
    <div class="row mb-2" id="index-content">
        <div class="col bg-light p-2">
            <img class="img-thubnail rounder float-left mr-3 mb-3 img-cover" src="{{image}}">
            <h3>{{titile}}</h3>
            <button data-id="{{_id}}" class="btn btn-info add-note" data-toggle="modal">Notes</button>
            <div class="modal fade test-left notes-modal" id="notes-modal-{{_id}}" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="noteModalLabel">Notes for {{results}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="name-input">Name</label>
                                    <input type="text" class="form-control" id="name-input-{{id}}" placeholder="Name">
                                </div>
                                <div class="form-group">
                                    <label for="note-input">Note</label>
                                    <textarea class="form-control" id="note-area-{{id}}" rows="2"></textarea>
                                </div>
                                <button class="btn btn-info submit-note" data-id="{{_id}}">Add Note</button>
                            </form>
                            <hr />
                            <div data-id="{{_id}}" class="note-div bg-light p-2">
                                {{#notes}}
                                <button type="button" data-id="{{_id}}" class="btn btn-danger btn-sm float-right delete-note">X</button>
                                {{name}} says:
                                </small>
                                <p>{{body}}</p>
                                {{/notes}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button data-id="{{_id}}" class="btn btn-danger unsave-article">Remove</button>
            </div>
        </div>
    </div>
    {{/each}}
    {{#unless articles}}
    <h3 class="text-center">You have no saved articles.</h3>
</div>